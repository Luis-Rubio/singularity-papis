%environment
    export LANG=C.UTF-8
    export LC_ALL=C.UTF-8

%post
    apt-get update
    apt-get install -y --no-install-recommends \
        build-essential \
        && rm -rf /var/lib/apt/lists/*
    python -m pip install --upgrade pip setuptools wheel
    pip install papis

%runscript
    papis "$@"
